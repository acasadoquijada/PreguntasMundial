<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/cesped"

    android:id="@+id/despedida"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alejandro.juegopreguntas.Despedida">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Â¡Enhorabuena,  has completado el juego!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textoVictoria"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:textSize="36sp"
            android:textColor="@android:color/background_light"
            android:layout_weight="0.17"
            android:textAlignment="center"
            android:textStyle="normal|bold" />

        <TextView
            android:text="Has obtenido estos resultados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_weight="0.17"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:textAlignment="center" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textCorrectoDespedida"
            android:layout_weight="0.17"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:textSize="18sp"
            android:textColor="@android:color/background_light"
            android:textStyle="normal|bold"
            android:textAlignment="viewStart" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textoFallosDespedida"
            android:layout_weight="0.17"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:textSize="18sp"
            android:textColor="@android:color/background_light"
            android:textStyle="normal|bold"
            android:textAlignment="viewStart" />

        <Button
            android:text="Volver a inicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/botonVolverInicioDespedida" />
    </LinearLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/cesped"
    android:id="@+id/activity_actividad_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alejandro.juegopreguntas.ActividadPrincipal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/copa"
        android:id="@+id/imagenCopa"
        android:layout_marginBottom="302dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="197dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Bienvenido, en este juego vamos a poner a prueba tus conocimientes sobre los mundiales de futbol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textoIntro"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            tools:ignore="HardcodedText"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textColor="@android:color/background_light" />

        <TextView
            android:text="Â¿Te atreves a afrontar este reto?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textoPregunta"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            tools:ignore="HardcodedText"
            android:textColor="@android:color/background_light"
            android:textStyle="normal|bold"
            android:textAlignment="center" />

        <Button
            android:text="Jugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/botonJugar"
            tools:ignore="HardcodedText" />

        <Button
            android:text="Puntuaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/botonPuntuacion"
            tools:ignore="HardcodedText" />

        <Button
            android:text="Otros juegos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/botonOtros"
            tools:ignore="HardcodedText"
            android:elevation="0dp" />

    </LinearLayout>
</RelativeLayout>
